    <h1>Match Resume to Job Listing</h1>
    <form id="matchForm">
        <label for="jobListingId">Select Job Listing:</label>
        <select id="jobListingId" name="jobListingId" required>
            <% jobListings.forEach(job => { %>
                <option value="<%= job.id %>"><%= job.title %> at <%= job.company %></option>
            <% }); %>
        </select>
        <button type="submit">Match Resume</button>
    </form>

    <div id="matchResult" style="display: none;">
        <h2>Match Result</h2>
        <pre id="aiAnalysis"></pre>
    </div>

    <script>
        document.getElementById('matchForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const jobListingId = document.getElementById('jobListingId').value;
            const matchResult = document.getElementById('matchResult');
            const aiAnalysis = document.getElementById('aiAnalysis');

            try {
                const response = await axios.post('/match-resume', { jobListingId });
                aiAnalysis.textContent = response.data.aiAnalysis;
                matchResult.style.display = 'block';
            } catch (error) {
                console.error('Error matching resume:', error);
                alert('Failed to match resume. Please try again.');
            }
        });
    </script>