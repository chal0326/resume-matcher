<h1>Add Job Listing</h1>
<% if (locals.error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>
<form action="/job-listings" method="POST">
    <input type="text" name="title" placeholder="Job Title" required>
    <input type="text" name="company" placeholder="Company" required>
    <textarea name="description" placeholder="Job Description" required></textarea>
    <textarea name="requirements" placeholder="Requirements (comma-separated)" required></textarea>
    <input type="text" name="location" placeholder="Location">
    <input type="text" name="salary_range" placeholder="Salary Range">
    <button type="submit">Add Job Listing</button>
</form>